# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=learningapp
DB_USER=postgres
DB_PASS=your_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# AI Services Configuration
# Gemini API Key (required for transcription, summarization, quiz generation)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional - for Whisper transcription as fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Transcription Service Preference
# Options: auto, gemini, whisper
# auto = prefer Whisper if available, fallback to Gemini
# gemini = prefer Gemini, fallback to Whisper
# whisper = prefer Whisper, fallback to Gemini
TRANSCRIPTION_SERVICE=auto

# xAPI/LRS Configuration
LRS_ENDPOINT=http://localhost:8080/xapi
LRS_USERNAME=admin
LRS_PASSWORD=password

# File Upload Configuration
MAX_VIDEO_SIZE_GB=5
MAX_PPT_SIZE_MB=100

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
AUTH_RATE_LIMIT_WINDOW_MINUTES=15
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
UPLOAD_RATE_LIMIT_WINDOW_MINUTES=60
UPLOAD_RATE_LIMIT_MAX_UPLOADS=10
AI_SERVICE_RATE_LIMIT_WINDOW_MINUTES=60
AI_SERVICE_RATE_LIMIT_MAX_REQUESTS=50

# Cache Configuration
CACHE_DEFAULT_TTL_SECONDS=3600
CACHE_CLEANUP_INTERVAL_MINUTES=60

# ETL Configuration
ETL_SCHEDULE_CRON=0 * * * *
ETL_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External Services
# LibreOffice path (for legacy PPT conversion)
LIBREOFFICE_PATH=/usr/bin/libreoffice

# FFmpeg Configuration (usually auto-detected)
FFMPEG_PATH=
FFPROBE_PATH=

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false
